<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.alzitao.homescreen"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />
    
    <!-- Phone Call listening and calling permissions-->
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name = "android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" android:hasCode="true">
        <activity
            android:theme="@android:style/Theme.Holo.Light"
            android:name="com.alzitao.AlzitaoHome.MainActivity"
            android:label="@string/app_name" >
            
            
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.HOME" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            
        </activity>
        
        <activity 
            android:name="com.alzitao.AlzitaoHome.CloseallActionbarAdapter"          
            ></activity>
        
        <activity android:name="com.alzitao.AlzitaoHome.CallActivity"></activity>
        
    </application>

</manifest>
